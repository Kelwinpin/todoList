generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  name      String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
  Tasks     Tasks[]
}

model DOM_priority {
  id          Int     @id @default(autoincrement())
  description String
  Tasks       Tasks[]
}

model Tasks {
  id         Int       @id @default(autoincrement())
  day_to_do  DateTime
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  deleted_at DateTime?

  // Relações
  user_id Int
  user    Users @relation(fields: [user_id], references: [id], onDelete: Cascade)

  priority_id Int
  priority    DOM_priority @relation(fields: [priority_id], references: [id])
}
